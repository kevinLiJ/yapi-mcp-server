{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["es2018"],
    "declaration": false
  },
  "include": [
    "*.ts",
    "src/types/**/*.ts",
    "src/index.ts",
    "src/yapi.ts",
    "src/utils.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 